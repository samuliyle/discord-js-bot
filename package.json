{
  "name": "discordbot-ts",
  "version": "1.0",
  "description": "Discord bot written in TypeScript using discord.js",
  "main": "bot.ts",
  "scripts": {
    "start": "ts-node src/bot.ts",
    "lint": "eslint . --ext js,jsx,ts,tsx --fix",
    "lint:ci": "eslint . --ext js,jsx,ts,tsx",
    "prettier:check:ci": "prettier --check .",
    "prettier:format": "prettier --write .",
    "test": "jest --watchAll",
    "test:ci": "jest",
    "coverage": "jest --coverage",
    "type-check": "tsc"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cleverbot-node": "^0.3.10",
    "discord.js": "14.14.1",
    "mysql": "^2.18.1"
  },
  "devDependencies": {
    "@swc/core": "^1.4.0",
    "@swc/jest": "^0.2.36",
    "@tsconfig/node20": "^20.1.2",
    "@types/jest": "^29.5.12",
    "@types/mysql": "^2.15.25",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
